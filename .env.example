# ============================================
# LINKIU.BIO - CONFIGURACIÓN DE EJEMPLO
# ============================================

# Aplicación
APP_NAME="Linkiu Bio"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Localización
APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

# Mantenimiento
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4

# ============================================
# LOGS
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# BASE DE DATOS
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=linkiubio
DB_USERNAME=root
DB_PASSWORD=

# ============================================
# SESIONES Y CACHE
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=file
QUEUE_CONNECTION=database

# ============================================
# ALMACENAMIENTO LOCAL
# ============================================
FILESYSTEM_DISK=public
MEDIA_DRIVER=local

# ============================================
# AUTENTICACIÓN
# ============================================
AUTH_MODEL=App\Shared\Models\User

# ============================================
# REDIS (OPCIONAL)
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# EMAIL (CONFIGURAR SEGÚN NECESIDADES)
# ============================================
MAIL_MAILER=log
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@linkiu.bio"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# TIEMPO REAL (PUSHER)
# ============================================
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=us2
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================
# ASSETS DEL SISTEMA
# ============================================
APP_LOGO=
APP_FAVICON=

# ============================================
# VITE
# ============================================
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"